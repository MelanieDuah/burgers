
{{#each burgers}}

{{#unless this.devoured}}
<div class="row">
    <div class="col-md-12">
        <form method="POST" action="/update">
            <div class="form-row">
                <div class="col-auto">
                    <p class="mt-3">{{this.burger_name}}</p>
                </div>
                <div class="col-auto">
                    <input name="id" type="hidden" value="{{this.id}}">
                    <button type="submit" class="btn btn-secondary mt-3 mb-2 button">devour it</button>
                </div>
            </div>
        </form>
    </div>
</div>
{{/unless}}
{{/each}}