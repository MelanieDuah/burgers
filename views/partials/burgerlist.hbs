{{#each burgers}}

{{#unless this.devoured}}
<form method="POST" action="/update">
    <div class="row mt-1">
        <div class="col-md-8 burger">
            <p class="mt-3 text-dark">{{this.burger_name}}</p>
        </div>
        <div class="col-md-4 burger">
            <input name="id" type="hidden" value="{{this.id}}">
            <button type="submit" class="btn btn-secondary mt-3 mb-2 button">devour it</button>
        </div>
    </div>
</form>

{{/unless}}
{{/each}}